<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"

    android:clickable="true"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvSpecials"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/textView3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sandton City"
                android:id="@+id/tvStoreName"
                android:textStyle="bold"
                android:textColor="#72bf44" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="AAAA0"
                android:id="@+id/tvStoreID"
                android:layout_alignTop="@+id/tvStoreName"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="#636363" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Phone:"
                android:id="@+id/textView7"

                android:layout_marginTop="5dp"
                android:layout_below="@+id/tvStoreName"
                android:textColor="#636363"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="+27 11 303 7600"
                android:id="@+id/tvStorePhone"
                android:textColor="#636363"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_above="@+id/tvStoreEmail"
                android:layout_toRightOf="@+id/textView6"
                android:layout_toEndOf="@+id/textView6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="E-mail:"
                android:id="@+id/textView11"
                android:layout_below="@+id/textView7"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:layout_marginTop="5dp"
                android:textColor="#636363"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="sandton@domain.com"
                android:id="@+id/tvStoreEmail"
                android:layout_alignTop="@+id/textView11"
                android:layout_alignLeft="@+id/tvStorePhone"
                android:layout_alignStart="@+id/tvStorePhone"
                android:textColor="#636363" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Address:"
                android:id="@+id/textView6"
                android:layout_below="@+id/textView11"
                android:layout_alignLeft="@+id/textView11"
                android:layout_alignStart="@+id/textView11"
                android:layout_marginTop="5dp"
                android:textColor="#636363"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Shop L330 Sandton Shop Mall, Cnr Sandton Drive &amp; Alice Roads Sandton 2197"
                android:id="@+id/tvStoreAddress"
                android:layout_alignTop="@+id/textView6"
                android:layout_alignLeft="@+id/tvStoreEmail"
                android:layout_alignStart="@+id/tvStoreEmail"
                android:textColor="#636363" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Hours:"
                android:id="@+id/textView15"
                android:layout_below="@+id/tvStoreAddress"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignStart="@+id/textView6"
                android:layout_marginTop="5dp"
                android:textColor="#636363"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Monday:"
                android:id="@+id/textView18"
                android:layout_below="@+id/tvStoreAddress"
                android:layout_alignLeft="@+id/tvStoreAddress"
                android:layout_alignStart="@+id/tvStoreAddress"
                android:layout_marginTop="5dp"
                android:textColor="#636363" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Tuesday:"
                android:id="@+id/textView20"
                android:layout_below="@+id/textView18"
                android:layout_alignLeft="@+id/textView18"
                android:layout_alignStart="@+id/textView18"
                android:layout_marginTop="5dp"
                android:textColor="#636363" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Wednesday:"
                android:id="@+id/textView22"
                android:layout_below="@+id/textView20"
                android:layout_alignLeft="@+id/textView20"
                android:layout_alignStart="@+id/textView20"
                android:layout_marginTop="5dp"
                android:textColor="#636363" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Thursday:"
                android:id="@+id/textView24"
                android:layout_below="@+id/textView22"
                android:layout_alignLeft="@+id/textView22"
                android:layout_alignStart="@+id/textView22"
                android:layout_marginTop="5dp"
                android:textColor="#636363" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Friday:"
                android:id="@+id/textView25"
                android:layout_below="@+id/textView24"
                android:layout_alignLeft="@+id/textView24"
                android:layout_alignStart="@+id/textView24"
                android:layout_marginTop="5dp"
                android:textColor="#636363" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Saturday:"
                android:id="@+id/textView26"
                android:layout_below="@+id/textView25"
                android:layout_alignLeft="@+id/textView25"
                android:layout_alignStart="@+id/textView25"
                android:layout_marginTop="5dp"
                android:textColor="#636363" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Sunday:"
                android:id="@+id/textView27"
                android:layout_below="@+id/textView26"
                android:layout_alignLeft="@+id/textView26"
                android:layout_alignStart="@+id/textView26"
                android:layout_marginTop="5dp"
                android:textColor="#636363" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Public Holidays:"
                android:id="@+id/textView28"
                android:layout_below="@+id/textView27"
                android:layout_alignLeft="@+id/textView27"
                android:layout_alignStart="@+id/textView27"
                android:layout_marginTop="5dp"
                android:textColor="#636363" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="9:00 - 20:00 "
                android:id="@+id/tvHoursMonday"
                android:layout_alignRight="@+id/tvStoreAddress"
                android:layout_alignEnd="@+id/tvStoreAddress"
                android:layout_alignTop="@+id/textView18"
                android:layout_marginRight="20dp"
                android:textColor="#636363" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="closed"
                android:id="@+id/tvHoursTuesday"
                android:layout_alignTop="@+id/textView20"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:textColor="#636363" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tvHoursWednesday"
                android:layout_alignTop="@+id/textView22"
                android:layout_alignRight="@+id/tvStoreAddress"
                android:layout_alignEnd="@+id/tvStoreAddress"
                android:layout_marginRight="20dp"
                android:textColor="#636363" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tvHoursThursday"
                android:layout_alignTop="@+id/textView24"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:textColor="#636363" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tvHoursFriday"
                android:layout_alignTop="@+id/textView25"
                android:layout_alignRight="@+id/tvStoreAddress"
                android:layout_alignEnd="@+id/tvStoreAddress"
                android:layout_marginRight="20dp"
                android:textColor="#636363" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tvHoursSaturday"
                android:layout_alignTop="@+id/textView26"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:textColor="#636363" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tvHoursSunday"
                android:layout_alignTop="@+id/textView27"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:textColor="#636363" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tvHoursPublicHoliday"
                android:layout_alignTop="@+id/textView28"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:textColor="#636363" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Chat With Store"
                android:id="@+id/btnStoreInteraction"
                android:layout_below="@+id/textView28"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/primary_color_button"
                android:textColor="#FFFFFFFF"
                android:visibility="visible" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
