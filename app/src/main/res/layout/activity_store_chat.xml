<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rahulfakir.theboldcircle.StoreData.StoreChatActivity"
    android:background="#FFFFFFFF">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:src="@mipmap/watermark_background"
        android:scaleType="fitXY"
        android:layout_above="@+id/etMessage"></ImageView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_alignTop="@+id/imageView"
        android:layout_above="@+id/etMessage"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"></android.support.v7.widget.RecyclerView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/etMessage"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/edit_text_background"
        android:paddingRight="55dp"
        android:layout_marginBottom="-5dp"
        android:layout_marginLeft="-5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:inputType="textCapSentences|textAutoCorrect"
        android:maxLines="2"
        android:layout_marginRight="-5dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnSendMessage"
        android:src="@mipmap/ic_send_black_24dp"
        android:longClickable="true"
        android:layout_alignRight="@+id/etMessage"
        android:layout_alignEnd="@+id/etMessage"
        android:layout_alignTop="@+id/etMessage"
        android:background="@drawable/primary_color_button" />
</RelativeLayout>
