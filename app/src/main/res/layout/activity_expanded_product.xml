<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_expanded_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rahulfakir.theboldcircle.ProductData.ExpandedProductActivity"
    android:background="@color/white">

    <ImageView
        android:src="@mipmap/watermark_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:contentDescription=""
        tools:ignore="ContentDescription" />





<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">
      <android.support.v7.widget.CardView
          xmlns:card_view="http://schemas.android.com/apk/res-auto"
          android:id="@+id/cvFindNearestStore"
          android:layout_gravity="center"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          card_view:cardCornerRadius="0dp"
          android:layout_margin="10dp">


          <RelativeLayout
              android:id="@+id/lytHolder"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <ImageView
                  android:src="@mipmap/expanded_product_banner"
                  android:layout_width="match_parent"
                  android:layout_height="200dp"
                  android:id="@+id/imgProductBanner"
                  android:scaleType="centerCrop"
                  android:contentDescription=""
                  tools:ignore="ContentDescription"
                  android:layout_marginTop="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginLeft="10dp" />

      <TextView
          android:text="Nail By Design"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/imgProductBanner"
          android:layout_marginTop="12dp"
          android:id="@+id/tvName"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_marginLeft="10dp"
          android:textSize="24sp"
          android:layout_marginRight="75dp" />

      <TextView
          android:text="R98.99"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignTop="@+id/tvName"
          android:layout_alignParentRight="true"
          android:layout_alignParentEnd="true"
          android:id="@+id/tvPrice"
          android:textSize="24sp"
          android:layout_marginRight="10dp" />

      <TextView
          android:text="by Kourtney Kardashian"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tvName"
          android:layout_alignLeft="@+id/tvName"
          android:layout_alignStart="@+id/tvName"
          android:id="@+id/tvBrand" />

      <TextView
          android:text="TextView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tvBrand"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="16dp"
          android:id="@+id/tvDescription"
          android:layout_marginRight="10dp"
          android:layout_marginLeft="10dp" />

      <TextView
          android:text="Option 1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tvDescription"
          android:layout_marginTop="11dp"
          android:id="@+id/tvFirstOption"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_marginRight="10dp"
          android:layout_marginLeft="10dp" />

      <TextView
          android:text="Option 2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/spnFirstOption"
          android:layout_alignLeft="@+id/spnFirstOption"
          android:layout_alignStart="@+id/spnFirstOption"
          android:layout_marginTop="9dp"
          android:id="@+id/tvSecondOption" />

      <Spinner
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tvSecondOption"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_marginTop="9dp"
          android:id="@+id/spnSecondOption"
          android:layout_marginRight="10dp"
          android:layout_marginLeft="10dp" />

      <Spinner
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="9dp"
          android:id="@+id/spnFirstOption"
          android:layout_below="@+id/tvFirstOption"
          android:layout_alignLeft="@+id/tvFirstOption"
          android:layout_alignStart="@+id/tvFirstOption" />

              <Button
                  android:text="Add To Cart"
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:id="@+id/btnAddToCart"
                  android:background="@drawable/primary_color_button"
                  android:textColor="@color/white"

              android:layout_alignParentBottom="true"
                  android:layout_marginRight="10dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginBottom="10dp" />
          </RelativeLayout>

</android.support.v7.widget.CardView>

</RelativeLayout>
</android.support.constraint.ConstraintLayout>
