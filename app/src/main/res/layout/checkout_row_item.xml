<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Microsoft Office 2016"
        android:id="@+id/tvName"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="R160.00"
        android:id="@+id/tvPrice"
        android:layout_alignBottom="@+id/tvName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="4AB6JKS"
        android:id="@+id/tvSKU"
        android:layout_below="@+id/tvName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSKU"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:id="@+id/rlAppointmentView">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Appointment:"
            android:id="@+id/textView16"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Date:"
            android:id="@+id/textView17"

            android:layout_below="@+id/textView16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="6th May 2016"
            android:id="@+id/tvAppointmentDate"
            android:layout_alignTop="@+id/textView17"
            android:layout_toRightOf="@+id/textView16"
            android:layout_toEndOf="@+id/textView16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Time:"
            android:id="@+id/textView19"
            android:layout_below="@+id/textView17"
            android:layout_alignLeft="@+id/textView17"
            android:layout_alignStart="@+id/textView17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="09:00 am"
            android:id="@+id/tvAppointmentTime"
            android:layout_below="@+id/tvAppointmentDate"
            android:layout_toRightOf="@+id/textView16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Store:"
            android:id="@+id/textView21"
            android:layout_below="@+id/textView19"
            android:layout_alignLeft="@+id/textView19"
            android:layout_alignStart="@+id/textView19" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Woodmead"
            android:id="@+id/tvAppointmentStore"
            android:layout_below="@+id/tvAppointmentTime"
            android:layout_toRightOf="@+id/textView16" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.38"
        android:visibility="gone"
        android:id="@+id/rlEditAppointment"
        android:layout_below="@id/tvSKU"
        android:layout_marginTop="10dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView3" />

        <TextView
            android:text="Store:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
  android:layout_below="@id/textView3"
            android:id="@+id/textView9"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/spnStores"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/textView9"
            android:layout_marginRight="10dp"
            android:spinnerMode="dialog"/>

        <TextView
            android:text="Date:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
         android:layout_below="@id/textView9"
            android:id="@+id/textView13"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:text="Select Date"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="9dp"
            android:layout_marginEnd="9dp"
            android:layout_marginTop="52dp"
            android:id="@+id/btnSelectDate"
            android:background="@drawable/primary_color_button"
            android:textColor="@color/white" />

        <TextView
            android:text="TextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSelectDate"
            android:layout_alignRight="@+id/btnSelectDate"
            android:layout_alignEnd="@+id/btnSelectDate"
            android:layout_marginTop="7dp"
            android:id="@+id/tvSelectedAppointmentDate" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="9dp"
            android:layout_marginEnd="9dp"
            android:layout_marginTop="111dp"
            android:id="@+id/spnEmployees"
            android:spinnerMode="dialog"/>

        <TextView
            android:text="Employee:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:layout_alignBaseline="@+id/spnEmployees"
            android:layout_alignBottom="@+id/spnEmployees"
            android:layout_alignLeft="@+id/textView13"
            android:layout_alignStart="@+id/textView13" />

        <TextView
            android:text="Time:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/textView18"
            android:layout_below="@+id/spnEmployees"
            android:layout_alignLeft="@+id/textView15"
            android:layout_alignStart="@+id/textView15" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/spnTimes"
            android:layout_alignTop="@+id/textView18"
            android:layout_alignLeft="@+id/spnEmployees"
            android:layout_alignStart="@+id/spnEmployees"
            android:spinnerMode="dialog"/>

        <Button
            android:text="Set Appointment"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/btnEditAppointment"
            android:layout_below="@+id/spnTimes"
            android:layout_marginTop="13dp"
            android:layout_alignRight="@+id/spnStores"
            android:layout_alignEnd="@+id/spnStores"
            android:layout_alignLeft="@+id/textView18"
            android:layout_alignStart="@+id/textView18"
            android:background="@drawable/primary_color_button"
            android:textColor="@color/white" />


    </RelativeLayout>


</RelativeLayout>