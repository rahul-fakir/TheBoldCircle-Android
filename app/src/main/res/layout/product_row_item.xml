<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:src="@mipmap/test"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imgProductThumbnail"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <TextView
        android:text="R90.99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPrice"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Nail Treatment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvProductName"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tvBrandName"
        android:layout_alignStart="@+id/tvBrandName"
        android:layout_toLeftOf="@+id/tvPrice"
        android:layout_toStartOf="@+id/tvPrice" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/checkBox2"
        android:button="@drawable/product_selection_checkbox"
        android:layout_below="@+id/tvProductName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:scaleX="1.25"
        android:scaleY="1.25" />

    <TextView
        android:text="100% PURE and NATURAL TEA TREE ESSENTIAL OIL - Produced through steam distillation of fresh leaves. Unfiltered and undiluted with no fillers or additives."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvProductDescription"
        android:textSize="12sp"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/imgProductThumbnail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="45dp"
        android:visibility="gone" />

    <TextView
        android:text="- Only 5 left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAvailableUnits"
        android:layout_alignBottom="@+id/imgProductThumbnail"
        android:layout_alignLeft="@+id/tvBrandName"
        android:layout_alignStart="@+id/tvBrandName"
        android:textSize="12sp" />

    <TextView
        android:text="service "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvBrandName"
        android:layout_marginLeft="7dp"
        android:textSize="14sp"
        android:layout_marginStart="7dp"
        android:layout_below="@+id/tvPrice"
        android:layout_toRightOf="@+id/imgProductThumbnail"
        android:layout_toEndOf="@+id/imgProductThumbnail"
        android:layout_marginTop="3dp" />

    <TextView
        android:text="- Different colors available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvAvailableUnits"
        android:layout_alignLeft="@+id/tvAvailableUnits"
        android:layout_alignStart="@+id/tvAvailableUnits"
        android:id="@+id/tvVariantStatus"
        android:textSize="12sp" />


</RelativeLayout>